<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:id="@+id/MainRelative">

    <TextView
        android:id="@+id/thankyou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="THANK YOU\nfor using BookMe!"
        android:textColor="@color/bg_main"
        android:textStyle="bold"
        android:textSize="32dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        />
    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/thankyou"
        android:src="@drawable/logo"
        android:layout_above="@id/checkemail"/>

    <TextView
        android:id="@+id/checkemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textAlignment="center"
        android:textSize="16dp"
        android:text="Please show the confirmation number you just received at the ticket window to collect your tickets!"
        android:layout_above="@id/home_activity6"
        android:layout_marginBottom="16dp"
        />

    <Button
        android:id="@+id/home_activity6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Go Home"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:background="@drawable/button_style"
        android:onClick="homeActivity"  />

</RelativeLayout>